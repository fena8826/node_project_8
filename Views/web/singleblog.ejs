<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            font-family: Arial, sans-serif;
            color: #343a40;
        }

        /* Navbar */
        .navbar {
            background: #ffffff !important;
            border-bottom: 1px solid #eaeaea;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
            color: #7460ee !important;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #495057 !important;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #7460ee !important;
        }

        .navbar .btn {
            background-color: #7460ee !important;
            color: #fff !important;
            border-radius: 25px;
            padding: 6px 16px;
            font-weight: 500;
        }

        .navbar .btn:hover {
            background-color: #5b47d0 !important;
        }

        /* Blog Card */
        .card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            border: none;
            background: #fff;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.12);
        }

        .card img {
            object-fit: contain;
            height: 100%;
            width: 100%;
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
        }

        .card-title {
            font-weight: 600;
            font-size: 1.3rem;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
        }

        .card .badge {
            border-radius: 25px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .btn-back {
            background-color: #7460ee;
            color: #fff;
            border-radius: 25px;
            padding: 8px 18px;
        }

        .btn-back:hover {
            background-color: #5b47d0;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/web">Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center gap-3">
                    <li class="nav-item"><a class="nav-link" href="/web">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/web">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="/web/product">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/web/contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/web/login">Login</a></li>
                    <li class="nav-item">
                        <a href="/web/register" class="btn">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Blog Single Card -->
    <div class="page-wrapper">
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card shadow-lg border-0">
                        <div class="row g-0">
                            <!-- Image Left -->
                            <div class="col-md-5">
                                <% if (blogs && blogs.image) { %>
                                    <img src="<%= blogs.image %>" alt="<%= blogs.title %>" class="img-fluid h-100 w-100">
                                <% } else { %>
                                    <img src="/images/default-blog.png" alt="No image" class="img-fluid h-100 w-100">
                                <% } %>
                            </div>

                            <!-- Blog Details Right -->
                            <div class="col-md-7">
                                <div class="card-body">
                                    <!-- Category Badge -->
                                    <span class="badge bg-primary mb-2">
                                        <%= blogs.category %>
                                    </span>

                                    <h2 class="card-title"><%= blogs.title %></h2>
                                    <p class="text-muted mb-2">By <strong><%= blogs.author %></strong></p>
                                    <p class="text-muted mb-2">Language: <%= blogs.language %></p>
                                    <p class="text-muted mb-3">Date: <%= new Date(blogs.createdAt).toLocaleDateString() %></p>

                                    <hr>

                                    <div class="card-text">
                                        <% blogs.content.split("\n").forEach(function(paragraph){ %>
                                            <p><%= paragraph %></p>
                                        <% }) %>
                                    </div>

                                    <div class="mt-4">
                                        <a href="/web" class="btn btn-back">‚Üê Back to Blogs</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
