                    <% } else { %>
                        <div class="dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown">
                               <%= user.firstname %> <%= user.lastname %>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">üë§ Profile</a></li>
                                <li><a class="dropdown-item" href="#">üîê Change Password</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/web/logout">üö™ Logout</a></li>
                            </ul>
                        </div>
                    <% } %>
                    <a href="#"><button class="btn btn-outline-dark"><i class="bi bi-heart"></i></button></a>
                    <a href="#"><button class="btn btn-outline-dark"><i class="bi bi-bag"></i></button></a>
                </div>
            </div>
        </nav>
    </header>


