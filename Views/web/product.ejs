        </div>
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#myntraBannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myntraBannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<div class="container">
  <!-- Categories -->
 


   <div class="container my-4 text-center category-buttons">
        <a class="btn btn-dark" href="/web/product">All</a>
        <% categories.forEach((category) => { %>
            <a class="btn btn-dark" href="/web/product?category=<%= category._id %>">
                <%= category.category %>
            </a>
        <% }); %>
    </div>
  

   <div class="container">
        <div class="row">
            <% allProducts.forEach((product) => { %>
                <div class="col-md-3 mb-4">
  <a href="/web/single-product/<%= product._id %>" class="text-decoration-none">
    <div class="product-card">
      <img src="<%= product.productImage %>" alt="<%= product.title %>">

      <div class="product-info">
        <h6 class="product-name"><%= product.title %></h6>
        <p class="product-price">‚Çπ <%= product.price %></p>
        <p class="product-category">
          <%= product.category && product.category.category ? product.category.category : 'Uncategorized' %>
        </p>
      </div>
    </div>
  </a>
</div>


            <% }); %>
        </div>
    </div>
</div>

