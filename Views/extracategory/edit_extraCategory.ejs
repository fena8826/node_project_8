    <%- include('../footer') %>     
   <script>
    document.addEventListener('DOMContentLoaded', () => {
        let category = document.querySelector("[name='categoryId']");
        let subcategory = document.querySelector("[name='subCategoryId']");

        // load subcategories based on category
        const loadSubCategories = (categoryId, selectedSubCatId = null) => {
            subcategory.innerHTML = "<option value=''>Select Sub Category</option>";
            fetch(`/subcategory/getAllSubCategory?categoryId=${categoryId}`)
                .then(res => res.json())
                .then(data => {
                    data.categories.forEach(cat => {
                        let option = document.createElement('option');
                        option.value = cat._id;
                        option.textContent = cat.subCategory;
                        if (selectedSubCatId && selectedSubCatId === cat._id) {
                            option.selected = true;
                        }
                        subcategory.appendChild(option);
                    });
                })
                .catch(err => console.log(err));
        };

        // On category change, reload subcategories
        category.addEventListener("change", (e) => {
            loadSubCategories(e.target.value);
        });

        // Pre-fill when editing
        <% if(extraCategory && extraCategory.categoryId) { %>
            loadSubCategories("<%= extraCategory.categoryId %>", "<%= extraCategory.subCategoryId %>");
        <% } %>
    });
</script>
